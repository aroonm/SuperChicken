<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blurry"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/titlescore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:background="#1111"
                android:padding="20dp"
                android:text="Score Board"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hiscoreboard"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/avscoreboard"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:background="#2222"
                android:gravity="center"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/timesscoreboard"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#2222"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.23"
                android:drawablePadding="50sp"
                android:padding="20dp"
                android:text="Collected Eggs"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/yeggscoreboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.23"
                android:drawableLeft="@drawable/yellowfin"
                android:drawablePadding="50sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/reggscoreboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.23"
                android:drawableLeft="@drawable/redfin"
                android:drawablePadding="50sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/beggscoreboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.23"
                android:drawableLeft="@drawable/bluefin"
                android:drawablePadding="50sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/zeggscoreboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.23"
                android:drawableLeft="@drawable/blackfin"
                android:drawablePadding="50sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fbscore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="invisible" >

            <Button
                android:id="@+id/loginfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/fb_button_col"
                android:gravity="center"
                android:paddingLeft="40sp"
                android:paddingRight="40sp"
                android:text="Login to Facebook"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.23"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="Log into facebook to show-off your stats, to all your friends"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>